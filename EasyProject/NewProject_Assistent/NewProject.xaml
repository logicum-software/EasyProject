<Window x:Class="EasyProject.NewProject_Assistent.NewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyProject.NewProject_Assistent"
        mc:Ignorable="d"
        Title="Neues Projekt" Height="191" Width="283" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0">
        <Label x:Name="label" Content="Dieser Assistent hilft Ihnen bei der Erstellung&#xD;&#xA;eines neuen Projekts. Bitte geben Sei zunächst&#xD;&#xA;einen eindeutigen Projektnamen ein:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="275" Height="60"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Height="23" Margin="15,75,0,0" TextWrapping="Wrap" Text="Bitte Projektnamen eingeben..." VerticalAlignment="Top" Width="245"/>
        <Button x:Name="buttonCancel" Content="Abbrechen" Margin="15,0,0,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="65" Click="ButtonCancel_Click"/>
        <Button x:Name="buttonNext" Content="Weiter" HorizontalAlignment="Right" Margin="0,0,17,10" Width="75" Height="20" VerticalAlignment="Bottom" IsEnabled="False" Click="ButtonNext_Click"/>
    </Grid>
</Window>
